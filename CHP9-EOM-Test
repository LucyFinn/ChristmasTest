# --- STARTER CODE: modify below this line ---

names = ["Ava", "Ben", "Ciara", "Dara", "Eoin", "Fiona"]
scores = [88, 54, 72, 39, 100, 67]

def grade_band(score):
    if score == 100 or score >= 90:
        return "A"
    elif score == 89 or score >= 80:
        return "B"
    elif score == 79 or score >= 70:
        return "C"
    elif score == 69 or score >= 60:
        return "D"
    elif score == 59 or score >= 40:
        return "E"
    else:
        return "F"

def passed(score):
    if score >= 40:
        return True
    else:
        return False

print("Name \tScore \tGrade \tPass?")
print("-" * 30)

for i in range(len(names)):
    print(names[i], "\t", scores[i], "\t", grade_band(scores[i]), "\t", passed(scores[i]))

print("\nSummary")
print("-------")
print("Students:", names)
print("Average: ", {(sum(scores)//len(scores))})
sortedList = scores.sort()
print("Highest: ", scores[-1])
print("Lowest:  ", scores[0])
names.remove('Dara')
print("Passed:  ", names)
